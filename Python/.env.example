# Flask Settings
FLASK_SECRET_KEY=change-me-to-a-random-secret-key
FLASK_DEBUG=false

# Azure Speech Service
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=your-region-here
AZURE_SPEECH_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_CONTAINER_NAME=speech-transcriptions

# IMPORTANT: Set to 'true' to enable blob storage
ENABLE_BLOB_STORAGE=false

# Authentication Method:
# - Set USE_MANAGED_IDENTITY=true if running in Azure with Managed Identity
# - Set USE_MANAGED_IDENTITY=false if running locally with Service Principal
USE_MANAGED_IDENTITY=false

# Service Principal Credentials (only needed if USE_MANAGED_IDENTITY=false)
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# Upload Settings
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=524288000

# Allowed Extensions
REALTIME_ALLOWED_EXTENSIONS=.wav
BATCH_ALLOWED_EXTENSIONS=.wav,.mp3,.ogg,.flac,.opus,.m4a,.webm

# Default Transcription Settings
DEFAULT_LOCALE=en-US
DEFAULT_MIN_SPEAKERS=2
DEFAULT_MAX_SPEAKERS=5

# Batch Job Settings
SHOW_TRANSCRIPTION_JOBS_TAB=true
ENABLE_BATCH_TRANSCRIPTION=true
BATCH_JOB_AUTO_REFRESH_SECONDS=60

# Cache Settings
LOCALES_CACHE_DURATION_HOURS=24

# Audio File Settings
KEEP_AUDIO_FILES=true
AUDIO_FILE_RETENTION_HOURS=24

# Transcription Estimation
WORDS_PER_SECOND=2.5
MIN_SEGMENT_DURATION_SECONDS=2.0

# File Size Limits (in bytes)
REALTIME_MAX_FILE_SIZE=104857600
BATCH_MAX_FILE_SIZE=1073741824
BATCH_MAX_FILES=100

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=10

# Polling Configuration
TRANSCRIPTION_POLL_INTERVAL_SECONDS=0.5
