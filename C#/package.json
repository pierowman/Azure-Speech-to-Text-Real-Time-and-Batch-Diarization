{
  "name": "speechtotext-tests",
  "version": "1.0.0",
  "description": "Unit tests for Speech to Text application",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@testing-library/jest-dom": "^6.1.5",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/speechtotext/wwwroot/js/__tests__/setup.js"],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "speechtotext/wwwroot/js/transcription.js",
      "speechtotext/wwwroot/js/transcription-jobs.js",
      "speechtotext/wwwroot/js/transcription-mode-selector.js",
      "!speechtotext/wwwroot/js/site.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "/lib/"
    ]
  }
}
